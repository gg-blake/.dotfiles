// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "agent": {
        "default_model": {
            "provider": "anthropic",
            "model": "claude-opus-4-latest"
        },
        "default_profile": "write"
    },
    "icon_theme": "Colored Zed Icons Theme Dark",
    "vim_mode": false,
    "edit_predictions": {
        "mode": "subtle",
        "copilot": {
            "proxy": null,
            "proxy_no_verify": null
        },
        "enabled_in_text_threads": false
    },
    "ui_font_size": 14,
    "buffer_font_size": 20,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Everforest Dark"
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 500
        }
    },
    "terminal": {
        "shell": {
            "with_arguments": {
                "program": "/bin/zsh",
                "args": ["--login"]
            }
        }
    },
    "buffer_font_family": "JetBrainsMonoNL Nerd Font Propo",
    "buffer_font_weight": 300,
    
    "tab_size": 4,
    "minimap": {
        "show": "always",
        "thumb": "always",
        "thumb_border": "left_open",
        "current_line_highlight": null
    },
    "formatter": "prettier",
    "relative_line_numbers": false,
    "gutter": {
        "line_numbers": true, // Show/hide line numbers in the gutter.
        "runnables": true, // Show/hide runnables buttons in the gutter.
        "breakpoints": true, // Show/hide show breakpoints in the gutter.
        "folds": true, // Show/hide show fold buttons in the gutter.
        "min_line_number_digits": 2 // Reserve space for N digit line numbers.
    },
    "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.removeUnusedImports": true
    },
    "format_on_save": "on",
    "current_line_highlight": "gutter",
    "language_models": {
        "anthropic": {
            "available_models": [
                {
                    "name": "claude-sonnet-4-20250514",
                    "display_name": "Claude Sonnet 4",
                    "max_tokens": 128000,
                    "max_output_tokens": 2560,
                    "cache_configuration": {
                        "max_cache_anchors": 10,
                        "min_total_token": 10000,
                        "should_speculate": false
                    },
                    "tool_override": "some-model-that-supports-toolcalling"
                },
                {
                    "name": "claude-sonnet-4-20250514",
                    "display_name": "Claude Sonnet 4 (thinking)",
                    "max_tokens": 200000,
                    "mode": {
                        "type": "thinking",
                        "budget_tokens": 4096
                    }
                },
                {
                    "name": "claude-opus-4-20250514",
                    "display_name": "Claude Opus 4",
                    "max_tokens": 128000,
                    "max_output_tokens": 2560,
                    "cache_configuration": {
                        "max_cache_anchors": 10,
                        "min_total_token": 10000,
                        "should_speculate": false
                    },
                    "tool_override": "some-model-that-supports-toolcalling"
                },
                {
                    "name": "claude-opus-4-20250514",
                    "display_name": "Claude Opus 4 (thinking)",
                    "max_tokens": 200000,
                    "mode": {
                        "type": "thinking",
                        "budget_tokens": 4096
                    }
                }
            ]
        }
    }
}
